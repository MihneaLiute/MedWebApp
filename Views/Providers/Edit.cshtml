@using Microsoft.AspNetCore.Identity
@model MedWebApp.Models.Provider

@{
    ViewData["Title"] = "Edit";
}

@inject UserManager<IdentityUser> UserManager

<h1>Edit</h1>

<h4>Provider</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="UserId" value="@await UserManager.FindByNameAsync(User.Identity.Name)).Id" />
            <div class="form-group">
                <label>
                    Select the services that you can perform from below. 
                    Currently, you are registered as being able to provide the following: 
                    <ul>
                    @foreach (Service service in Model.AvailableServices)
                    {
                        <li> @service.Name </li>
                    }
                    </ul>
                </label>
                <select multiple asp-items="ViewBag.Services">
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger" value="@Model.Type"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
